<div class="row-fluid">

<h1> Contact Us</h1>

<%= form_tag "/inquiry/send_mail", method: "get" do %>
<%= label_tag 'name', "Name:" %>
<%= text_field_tag 'name' %>
<%= label_tag 'email', "Email:" %>
<%= text_field_tag 'email' %>
<%= label_tag 'message', "Message:" %>
<%= text_area_tag 'message' %>

<%= submit_tag "submit" %>
<% end %>

</div>