- model_class = Report
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
- if flash[:notice]
  .notice= flash[:notice]
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:device_id)
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:restaurant_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @reports.each do |report|
      %tr
        %td= link_to report.id, report_path(report)
        %td= report.device
        %td= report.date
        %td= report.value
        %td= report.restaurant_id
        %td= report.user_id
        %td= l report.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_report_path(report), :class => 'btn btn-mini'       |
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            report_path(report),                                                                                         |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'                                                                          |
= link_to t('.new', :default => t("helpers.links.new")), |
  new_report_path,                                       |
  :class => 'btn btn-primary'                            |
