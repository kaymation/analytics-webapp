- model_class = Report
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:device_id)
      \:
  %dd= @report.device_id
  %dt
    %strong
      = model_class.human_attribute_name(:when)
      \:
  %dd= @report.when
  %dt
    %strong
      = model_class.human_attribute_name(:preptime)
      \:
  %dd= @report.preptime
  %dt
    %strong
      = model_class.human_attribute_name(:restaurant_id)
      \:
  %dd= @report.restaurant_id
  %dt
    %strong
      = model_class.human_attribute_name(:user_id)
      \:
  %dd= @report.user_id
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    reports_path, :class => 'btn'                            |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_report_path(@report), :class => 'btn'               |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    report_path(@report),                                                                                        |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
